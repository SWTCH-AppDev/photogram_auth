<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Photo</th>
        <th>Caption</th>
      </tr>
      
      <tr>
        <td><%= @user.username %></td>
        <% @user.photos.each do |photo| %>
        <td><img src="<%= photo.image %>"</td>
        <td><%= photo.caption %></td>
        <% end %>
      </tr>

    </table>
  </div>
</div>
